#advantages
	padding 50px 0 110px
	background-color: #009DD2
	background-image url(../img/backs/adv-bg-1.svg)
	background-repeat no-repeat
	background-position: right -10% center
	background-size: contain
	position relative
	z-index -1
	&:before
		content: ''
		display block
		position: absolute
		left 0
		right 0
		bottom 0
		width 100%
		height 110px
		background-image: url(../img/backs/adv-bg-2.png)
		background-repeat no-repeat
		background-position: right -10% center
		background-size: 100% 100%
.advantage
	width 100%
	max-width 320px
	margin 0 auto 20px
	padding 120px 0 0
	background-repeat no-repeat
	background-position: top left
	background-size: 96px 
	&-1
		background-image url('../img/icons/adv-4.svg')
	&-2
		background-image url('../img/icons/adv-21.svg')
	&-3
		background-image url('../img/icons/adv-3.svg')
	&-4
		background-image url('../img/icons/adv-11.svg')
	&-title
		margin 0 0 25px;
		font-size: 20px;
		font-family: GB
		line-height: 1.3em;