@import '../_css/bootstrap.min.css'
@import '../_css/jquery.fancybox.min.css'

*
	margin 0
	padding 0
	outline none
body
	font-family: G
	color #fff
	font-size: 16px
	line-height: 1.4em;
a
	color: #fefefe
	&:focus
		outline: 0
		color #fff
		text-decoration: none
	&:hover
		text-decoration none
		color #ffca03
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 3px
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.general-title
	font-size: 36px
	font-family: GB
	width 100%
	max-width 760px
	max-width: 780px;
	margin-bottom: 50px;
	&-black
		color #303036
.button
	display: inline-block;
	// width 100%
	// max-width 260px
	text-align: center
	padding: 9px 15px;
	background-color: #FFCB05
	color: #303036
	border: 1px solid #FFCB05
	line-height: inherit;
	text-decoration: none;
	cursor: pointer;
	border-radius: 5px
	font-family: GM
	margin 0 auto
	transition: all .3s ease
	&:focus
		text-decoration: none
		background-color: #FFCB05
		color:#303036
	&:hover
		background-color: #303036
		color: #FFCB05
		border-color: #FFCB05
		color #fff
	&-2
		background-color: #3898EC;
		border-color: #3898EC;
		color #fff
		&:focus
			background-color: #3898EC;
			color:#fff
		&:hover
			background-color: #303036
			color: #fff
			border-color: #303036
	&-wrapper
		text-align: center
